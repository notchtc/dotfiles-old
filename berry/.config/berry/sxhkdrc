# WM INDEPENDENT HOTKEYS

# terminal emulator
super + Return
    alacritty

# program launcher
super + r
    rofi -show run

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd

super + control + r
    source "$XDG_CONFIG_HOME"/berry/autostart

# take screenshot:
# - of the whole screen
# - of the selected area
# and:
# - copy it to clipboard
# - host it on https://0x0.st and copy the link to clipboard
{_, shift +} {_,ctrl +} Print
    maim {-u, -su} | {xclip -selection clipboard -t image/png, curl -F 'file=@-' https://0x0.st | xclip -selection clipboard}

# raise volume
XF86AudioRaiseVolume
    pamixer -i 5 && polybar-msg hook volume 1

# lower volume
XF86AudioLowerVolume
    pamixer -d 5 && polybar-msg hook volume 1

# mute volume
XF86AudioMute
    pamixer -t && polybar-msg hook volume 1

# go to next track
XF86AudioNext
    playerctl next || mpc next

# go to previous track
XF86AudioPrev
    playerctl previous || mpc prev

# play/pause track
XF86AudioPlay
    playerctl play-pause || mpc toggle

# lower brightness
XF86MonBrightnessDown
    xbacklight -dec 5

# raise brightness
XF86MonBrightnessUp
    xbacklight -inc 5

# shutdown system
super + shift + x
    ask 'Do you want to shutdown?' 'doas /sbin/poweroff'

# reboot system
super + shift + r
    ask 'Do you want to reboot?' 'doas /sbin/reboot'

# BERRY HOTKEYS

# move or resize current window
super + {ctrl, shift} + {h, j, k, l}
    berryc {window_move, window_resize} {-10 0, 0 10, 0 -10, 10 0}

# switch to the nearest window in the specified direction
super + {h, j, k, l}
    berryc cardinal_focus {2, 3, 1, 0}

# switch workspaces from 1 to 10
super + {1-9,0}
    berryc switch_workspace {0-8,9}

# send current window to workspace
super + shift + {1-9,0}
    berryc send_to_workspace {0-8,9}

# monocle current window
super + m
    berryc window_monocle

# toggle the fullscreen status of the current window
super + f
    berryc fullscreen

# snap the current window to the left/right
super + {o, p}
    berryc {snap_left, snap_right}

# toggle decorations for the current window
super + n
    berryc toggle_decorations

# switch focus to the next window in the list
super + Tab
    berryc cycle_focus

# close current window
super + shift + c
    berryc window_close

# center current window
super + c
    berryc window_center

# quit berry
super + shift + q
    berryc quit

# focus the window underneath the pointer
~button1
    berryc pointer_focus
