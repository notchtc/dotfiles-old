# Exports

export TERM="xterm-256color"

export XDG_DATA_HOME=$HOME/.local/share
export XDG_CONFIG_HOME=$HOME/.config
export XDG_CACHE_HOME=$HOME/.cache

export HISTFILE="$XDG_DATA_HOME"/zsh/history
export GTK2_RC_FILES="$XDG_CONFIG_HOME"/gtk-2.0/gtkrc
export GNUPGHOME="$XDG_DATA_HOME"/gnupg
export ICEAUTHORITY="$XDG_CACHE_HOME"/ICEauthority
export GEM_HOME="$XDG_DATA_HOME"/gem
export GEM_SPEC_CACHE="$XDG_CACHE_HOME"/gem

export EDITOR="nvim"
export BROWSER="chromium"
export JAVA_HOME=/usr/lib/jvm/java-1.8.0-amazon-corretto/jre

export PATH="$JAVA_HOME/bin:$ZSH_CONFIG_FILES:$PATH"

# Aliases
# Shorter apt commands
alias apt-install="sudo apt-get install"
alias apt-remove="sudo apt-get remove"
alias apt-update"sudo apt-get upgrade"
alias ppa-add="sudo add-apt-repository"
alias ppa-update="sudo apt-get update"
# Time saving
alias src="source"
alias e="$EDITOR"
alias filec="echo 'File count:\n$(ls -l -A | grep -v ^l | wc -l)'"
alias config='/usr/bin/git --git-dir=$HOME/dotfiles/ --work-tree=$HOME'

