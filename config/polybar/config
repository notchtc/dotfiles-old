[colors]
background = ${xrdb:background}
foreground = ${xrdb:foreground}

black = ${xrdb:color0}
red = ${xrdb:color1}
green = ${xrdb:color2}
yellow = ${xrdb:color3}
blue = ${xrdb:color4}
magenta = ${xrdb:color5}
cyan = ${xrdb:color6}
gray = ${xrdb:color7}
b_black = ${xrdb:color8}
b_red = ${xrdb:color9}
b_green = ${xrdb:color10}
b_yellow = ${xrdb:color11}
b_blue = ${xrdb:color12}
b_magenta = ${xrdb:color13}
b_cyan = ${xrdb:color14}
white = ${xrdb:color15}

[bar/bar]
width = 100%
height = 25
forced-center = true

background = ${colors.background}
foreground = ${colors.b_cyan}

font-0 = Hack:pixelsize=9:antialias=true;1
font-1 = Hack Nerd Font:pixelsize=10:antialias=true;2

modules-left = bspwm
modules-center = date
modules-right = pulseaudio memory cpu battery wlan eth

tray-position = right

wm-restack = bspwm
override-redirect = true

cursor-click = pointer
cursor-scroll = ns-resize

enable-ipc = true

[module/bspwm]
type = internal/bspwm
format-margin = 0
format-padding = 0

ws-icon-0 = "I;"
ws-icon-1 = "II;"
ws-icon-2 = "III;"
ws-icon-3 = "IV;"
ws-icon-4 = "V;5"
ws-icon-5 = "VI;6"
ws-icon-6 = "VII;7"
ws-icon-7 = "VIII;8"
ws-icon-8 = "IX;9"
ws-icon-9 = "X;10"

label-focused = %icon%
label-focused-foreground = ${colors.b_yellow} 
label-focused-padding = 1

label-occupied = %icon%
label-occupied-padding = 1

label-urgent = %icon%!
label-urgent-foreground = ${colors.b_red}
label-urgent-padding = 1

label-empty = %icon%
label-empty-foreground = ${colors.b_black}
label-empty-padding = 1

enable-scroll = false

[module/xwindow]
type = internal/xwindow
label = %title:0:50:…%
label-foreground = ${colors.b_yellow}
label-padding = 1

[module/pulseaudio]
type = internal/pulseaudio
format-volume-prefix = "%{T2}墳 %{T-}"
format-volume-prefix-foreground = ${colors.b_yellow}
format-volume = <label-volume>
label-volume = %percentage%%

format-muted-prefix = "%{T2}婢 %{T-}"
format-muted-prefix-foreground = ${colors.b_yellow}
format-muted-foreground = ${colors.b_yellow}
label-muted = %percentage%%

[module/alsa]
type = internal/alsa
format-volume-prefix = "%{T2}墳 %{T-}"
format-volume-prefix-foreground = ${colors.b_yellow}
format-volume = <label-volume>
format-volume-foreground = ${colors.b_yellow}
label-volume = %percentage%%
format-muted-prefix = "%{T2}婢 %{T-}"
format-muted-prefix-foreground = ${colors.b_yellow}
format-muted-foreground = ${colors.b_yellow}
label-muted = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "%{T2} %{T-}"
format-prefix-foreground = ${colors.b_yellow}
label = %percentage_used%%

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "%{T2} %{T-}"
format-prefix-foreground = ${colors.b_yellow}
label = %percentage%%

[module/battery]
type = internal/battery
battery = BAT1
adapter = ACAD
full-at = 98

format-charging-prefix = "%{T2} %{T-}"
format-charging-prefix-foreground = ${colors.b_yellow}
format-charging = <label-charging>
format-discharging-prefix = "%{T2} %{T-}"
format-discharging-prefix-foreground = ${colors.b_yellow}
format-discharging-foreground = ${colors.b_yellow}
format-discharging = <label-discharging>

format-full-prefix = "%{T2} %{T-}"
format-full-prefix-foreground = ${colors.b_yellow}

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 3.0

format-connected = <label-connected>
format-connected-prefix = "%{T2}直 %{T-}"
format-connected-prefix-foreground = ${colors.b_yellow}
label-connected = connected

label-disconnected =

[module/eth]
type = internal/network
interface = enp2s0
interval = 3.0

format-connected-prefix = "%{T2} %{T-}"
format-connected-prefix-foreground = ${colors.b_yellow}
label-connected = connected

format-disconnected =

[module/date]
type = internal/date
interval = 5

date = %d.%m.%Y
date-alt = %d.%m.%Y

time = %H:%M
time-alt = %H:%M:%S

label = %date% %time%

[settings]
screenchange-reload = true
format-padding = 1

[global/wm]
margin-top = 25
margin-bottom = 25

