[colors]
background = ${xrdb:background:#222}
background-alt = ${xrdb:color8:#444}
foreground = ${xrdb:foreground:#222}
foreground-alt = ${xrdb:color15:#555}

primary = ${xrdb:color1:#ffb52a}
secondary = ${xrdb:color13:#e60053}
alert = ${xrdb:color5:#bd2c40}

[bar/bar]
width = 100%
height = 25
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

border-size = 5
border-color = #00

line-size = 3
lize-color = #f00

font-0 = monospace:pixelsize=8;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = siji:pixelsize=10;1

modules-left = bspwm
modules-center = xwindow
modules-right = pulseaudio memory cpu temperature battery wlan eth date powermenu

tray-position = right
tray-padding = 1

wm-restack = bspwm
override-redirect = true

cursor-click = pointer
cursor-scroll = ns-resize

enable-ipc = true

[module/xwindow]
type = internal/xwindow
label = %title:0:35:...% 
format-background = ${colors.primary}

[module/bspwm]
type = internal/bspwm

format-padding = 0

label-focused = %index%
label-focused-foreground = ${colors.foreground}
label-focused-background = ${colors.primary}
label-focused-padding = 2

label-occupied = %index%
label-occupied-foreground = ${colors.foreground-alt}
label-occupied-padding = 2

label-urgent = %index%!
label-urgent-foreground - ${colors.foreground}
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-empty =

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-background = ${colors.primary}
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-background = ${colors.primary}
label = %percentage_used%%

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 3.0

format-connected-margin = 1

format-connected = <ramp-signal> <label-connected>
format-connected-background = ${xrdb:color9:#9f78e1}
label-connected = %essid%

format-disconnected =

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 

[module/eth]
type = internal/network
interface = enp2s0
interval = 3.0

format-connected-background = ${xrdb:color9:#55aa55}
format-connected-prefix = " "
label-connected = %local_ip%

format-disconnected =

[module/date]
type = internal/date
interval = 5

date =
date-alt = " %Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

format-prefix = 
format-background = ${xrdb:color6:#0a6cf5}

label = %date% %time%

[module/pulseaudio]
type = internal/pulseaudio

format-volume-margin = 1
format-volume = <label-volume>
format-volume-background = ${xrdb:color2:#55aa55}
label-volume =  %percentage%%

format-muted-margin = 1
format-muted-background = ${colors.primary}
label-muted =  %percentage%%

[module/alsa]
type = internal/alsa

format-volume-margin = 1
format-volume = <label-volume>
format-volume-background = ${xrdb:color2:#55aa55}
label-volume =  %percentage%%
label-volume-foreground = ${root.foreground}

format-muted-margin = 1
format-muted-prefix = " "
format-muted-foreground = ${colors.foreground-alt}
format-muted-background = ${colors.primary}
label-muted = %percentage%%

[module/battery]
type = internal/battery
battery = BAT1
adapter = ACAD
full-at = 98

format-charging = <animation-charging> <label-charging>
format-charging-background = ${xrdb:color3:#ffb52a}

format-discharging = <animation-discharging> <label-discharging>
format-discharging-background = ${colors.primary}

format-full-prefix = " "
format-full-background = ${self.format-charging-background}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-framerate = 750

animation-discharging-0 = 
animation-discharging-1 = 
animation-discharging-2 = 
animation-discharging-framerate = 750

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
format-background = ${colors.primary}
format-warn = <ramp> <label-warn>
format-warn-background = ${self.format-background}

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.secondary}

ramp-0 = 
ramp-1 = 
ramp-2 = 

[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 1

label-open = 
label-open-foreground = ${colors.secondary}
label-close =  cancel
label-close-foreground = ${colors.secondary}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = reboot
menu-0-0-foreground = ${colors.foreground-alt}
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-foreground = ${colors.foreground-alt}
menu-0-1-exec = menu-open-2

menu-1-0 = reboot
menu-1-0-foreground = ${colors.foreground-alt}
menu-1-0-exec = reboot

menu-2-0 = power off
menu-2-0-foreground = ${colors.foreground-alt}
menu-2-0-exec = poweroff

[settings]
screenchange-reload = true

format-padding = 2 
format-foreground = ${colors.background}

[global/wm]
margin-top = 5
margin-bottom = 5

