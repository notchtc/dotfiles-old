[colors]
background = ${xrdb:background}
foreground = ${xrdb:foreground}

black = ${xrdb:color0}
gray = ${xrdb:color8}
red = ${xrdb:color1}
b_red = ${xrdb:color9}
green = ${xrdb:color2}
b_green = ${xrdb:color10}
yellow = ${xrdb:color3}
b_yellow = ${xrdb:color11}
blue = ${xrdb:color4}
b_blue = ${xrdb:color12}
pink = ${xrdb:color5}
b_pink = ${xrdb:color13}
cyan = ${xrdb:color6}
b_cyan = ${xrdb:color14}
b_gray = ${xrdb:color7}
white = ${xrdb:color15}

[bar/bar]
width = 100%
height = 25
fixed-center = false

bottom = true

background = ${colors.background}
foreground = ${colors.foreground}

border-size = 10
border-color = #0

line-size = 3
lize-color = #f00

font-0 = monospace:pixelsize=8;1
font-1 = siji:pixelsize=10;1

modules-left = bspwm
modules-center = xwindow
modules-right = pulseaudio space memory cpu battery space wlan eth date powermenu

tray-position = right
tray-padding = 1

wm-restack = bspwm
override-redirect = true

cursor-click = pointer
cursor-scroll = ns-resize

enable-ipc = true

[module/xwindow]
type = internal/xwindow
label = %title:0:35:...% 
format-background = ${colors.b_red}

[module/bspwm]
type = internal/bspwm

format-padding = 0

label-focused = %index%
label-focused-background = ${colors.b_red}
label-focused-padding = 2

label-occupied = %index%
label-occupied-foreground = ${colors.white}
label-occupied-padding = 2

label-urgent = %index%!
label-urgent-background = ${colors.b_yellow}
label-urgent-padding = 2

label-empty =

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-overline = ${colors.red}
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-overline = ${colors.red}
label = %percentage_used%%

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 3.0

format-connected = <ramp-signal> <label-connected>
format-connected-overline = ${colors.b_red}
label-connected = %essid%

format-disconnected =

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 

[module/eth]
type = internal/network
interface = enp2s0
interval = 3.0

format-connected-overline = ${colors.b_red}
format-connected-prefix = " "
label-connected = %local_ip%

format-disconnected =

[module/date]
type = internal/date
interval = 5

date =
date-alt = " %Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

format-prefix = 
format-overline = ${colors.cyan}

label = %date% %time%

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume>
format-volume-overline = ${colors.green}
label-volume =  %percentage%%

format-muted-overline = ${colors.red}
label-muted =  %percentage%%

[module/alsa]
type = internal/alsa

format-volume = <label-volume>
format-volume-overline = ${colors.green}
label-volume =  %percentage%%
label-volume-foreground = ${root.foreground}

format-muted-prefix = " "
format-muted-foreground = ${colors.white}
format-muted-overline = ${colors.red}
label-muted = %percentage%%

[module/battery]
type = internal/battery
battery = BAT1
adapter = ACAD
full-at = 98

format-charging = <animation-charging> <label-charging>
format-charging-overline = ${colors.yellow}

format-discharging = <animation-discharging> <label-discharging>
format-discharging-overline = ${colors.red}

format-full-prefix = " "
format-full-overline = ${self.format-charging-overline}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-framerate = 750

animation-discharging-0 = 
animation-discharging-1 = 
animation-discharging-2 = 
animation-discharging-framerate = 750

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
format-overline = ${colors.red}
format-warn = <ramp> <label-warn>
format-warn-overline = ${self.format-overline}

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.b_red}

ramp-0 = 
ramp-1 = 
ramp-2 = 

[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 1

label-open = 
label-open-foreground = ${colors.b_red}
label-close =  cancel
label-close-foreground = ${colors.b_red}
label-separator = |
label-separator-foreground = ${colors.white}

menu-0-0 = reboot
menu-0-0-foreground = ${colors.white}
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-foreground = ${colors.white}
menu-0-1-exec = menu-open-2

menu-1-0 = reboot
menu-1-0-foreground = ${colors.white}
menu-1-0-exec = sudo reboot

menu-2-0 = power off
menu-2-0-foreground = ${colors.white}
menu-2-0-exec = sudo poweroff

[settings]
screenchange-reload = true

format-padding = 2 

