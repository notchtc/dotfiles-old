[colors]
background = #282828
foreground = #ebdbb2

black = #282828
gray = #928374
red = #cc241d
b_red = #fb4934
green = #98971a
b_green = #b8bb26
yellow = #d79921
b_yellow = #fabd2f
blue = #458588
b_blue = #83a598
magenta = #b16286
b_magenta = #d3869b
cyan = #689d6a
b_cyan = #8ec07c
b_gray = #a89984
white = #ebdbb2

primary = ${self.b_red}
alert = ${self.b_yellow}

[bar/bar]
width = 100%
height = 25
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = Hack:pixelsize=9:antialias=true;1

modules-left = bspwm
modules-center = xwindow
modules-right = pulseaudio memory cpu battery wlan eth date

tray-position = right

wm-restack = bspwm
override-redirect = true

cursor-click = pointer
cursor-scroll = ns-resize

enable-ipc = true

[module/bspwm]
type = internal/bspwm

format-padding = 0

label-focused = "%{F#fb4934}[%{F-}%index%%{F#fb4934}]%{F-}"
label-focused-foreground = ${colors.primary}
label-focused-padding = 1

label-occupied = %index%
label-occupied-padding = 1

label-urgent = %index%!
label-urgent-foreground = ${colors.alert}
label-urgent-padding = 1

label-empty =

enable-scroll = false

[module/xwindow]
type = internal/xwindow
label = %{F#fb4934}|%{F-}%title:0:35:...%%{F#fb4934}|%{F-} 
format-foreground = ${colors.primary}

[module/pulseaudio]
type = internal/pulseaudio

format-volume-prefix = "V:"
format-volume = <label-volume>
format-volume-foreground = ${colors.b_green}
label-volume = %percentage%%

format-muted-prefix = "V:"
format-muted-foreground = ${colors.red}
label-muted = %percentage%%

[module/alsa]
type = internal/alsa

format-volume-prefix = "V:"
format-volume = <label-volume>
format-volume-foreground = ${colors.b_green}
label-volume = %percentage%%

format-muted-prefix = "V:"
format-muted-foreground = ${colors.red}
label-muted = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "M:"
format-foreground = ${colors.green}
label = %percentage_used%%

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "C:"
format-foreground = ${colors.green}
label = %percentage%%

[module/battery]
type = internal/battery
battery = BAT1
adapter = ACAD
full-at = 98

format-charging-prefix = "B:"
format-charging = <label-charging>
format-charging-foreground = ${colors.yellow}

format-discharging-prefix = "B:"
format-discharging = <label-discharging>
format-discharging-foreground = ${colors.red}

format-full-prefix = "B:"
format-full-foreground = ${self.format-charging-foreground}

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 3.0

format-connected = <label-connected>
format-connected-foreground = ${colors.b_blue}
format-connected-prefix = "W:"
label-connected = connected

label-disconnected =

[module/eth]
type = internal/network
interface = enp2s0
interval = 3.0

format-connected-foreground = ${colors.b_blue}
format-connected-prefix = "E:"
label-connected = connected

format-disconnected =

[module/date]
type = internal/date
interval = 5

date =
date-alt = " %d-%m-%Y"

time = %H:%M
time-alt = %H:%M:%S

label = %time% %date%

[settings]
screenchange-reload = true
format-padding = 1

[global/wm]
margin-top = 25
margin-bottom = 25

; vim:ft=dosini
