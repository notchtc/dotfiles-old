

# DIRECTORIES
ncmpcpp_directory = ~/.config/ncmpcpp
lyrics_directory = ~/music/lyrics

# CONNECTION SETTINGS
mpd_host = localhost
mpd_port = 6600
mpd_connection_timeout = 5

mpd_music_dir = ~/music

mpd_crossfade_time = 5

# SONG FORMAT
song_status_format = {{%t}|{%f} by {{$3%a$9 from $7{%b{ $4(%y)$9 }}$9}}}
song_list_format = {%a} {$7%b$9} $8{%t}|{%f}$9
song_library_format = {$4%n$9 $8-$9} $7{%t}|{%f}$9

# COLUMMNS
song_columns_list_format = (13)[]{a} (50)[cyan]{t|f:Title} (6f)[yellow]{NEr} (8f)[magenta]{lr}

# COLORS
colors_enabled = yes

empty_tag_color = 13

main_window_color = 11

volume_color = 14

state_flags_color = 15

color1 = 16

color2 = 15

statusbar_time_color = 14

progressbar_color = 1

player_state_color = 16

# OTHER
## Note: Possible display modes: classic, columns.
browser_display_mode = columns

playlist_display_mode = classic

search_engine_display_mode = columns

playlist_editor_display_mode = columns

## Note: You can specify third character which will be used to build 'empty'
## part of progressbar.
progressbar_look = ▂▂▂

clock_display_seconds = yes

external_editor = nvim

## Note: set to yes if external editor is a console application.
use_console_editor = yes

message_delay_time = 1

execute_on_song_change = notify-send "Now Playing" "$(mpc --format '%title%\n%artist% - %album%' current)"

header_visibility = no
