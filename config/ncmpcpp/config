# CONNECTION SETTINGS
mpd_host = localhost
mpd_port = 6600
mpd_connection_timeout = 5

mpd_music_dir = ~/music

mpd_crossfade_time = 5

# FORMATTING
song_status_format = {$3{%t}|{%f}$9 from {{$(13){%b}$9 by $(11)%a$9}}}
song_list_format = {%a} {$(13)%b$9} $8{%t}|{%f}$9
song_library_format = {$4%n$9 $8-$9} $(13){%t}|{%f}$9

current_item_prefix = $(3)$b
current_item_suffix = $/b$(end)

now_playing_prefix = $(11)$b
now_playing_suffix = $/b$(end)

song_columns_list_format = (7f)[7]{l} (80)[]{t|f} (20)[11]{ar}

# COLORS
colors_enabled = yes

empty_tag_color = 13

main_window_color = 3

color1 = 16

